{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "lib": ["dom", "es2017", "es2019"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "experimentalDecorators": true,
    "useDefineForClassFields": true,
    "noImplicitAny": false,
    "isolatedModules": true,
    "incremental": true,

    "baseUrl": ".",
    "paths": {
      "#/*": ["./src/*"],
      "#/public/*": ["./public/*"]
    }
  },
  "paths": {
    "~/*": ["./*"]
  },
  "exclude": ["./node_modules/**/*", "**/*.test.ts", "cypress"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "postcss.config.js", "jest.config.ts"]
}
