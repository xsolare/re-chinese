{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    "baseUrl": ".",
    "paths": {
      "#/*": ["./src/*"],
      "#/public/*": ["./public/*"]
    }
  },
  "exclude": ["./node_modules/**/*", "**/*.test.ts", "cypress"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "postcss.config.js"]
}
