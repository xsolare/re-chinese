{
  "name": "re-chinese",
  "version": "0.3.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:ssl": "node server.js",
    "build": "next build",
    "build:stats": "cross-env ANALYZE=true npm run build",
    "start": "next start",
    "start:ssl": "NODE_ENV=production node server.js",
    "sitemap": "next-sitemap",
    "postbuild": "next-sitemap",
    "export": "BROWSERSLIST_IGNORE_OLD_DATA=true next export",
    "lint": "pnpm lint:ts && pnpm lint:scss",
    "lint:ts": "eslint \"./**/*.{ts,tsx}\"",
    "lint:scss": "stylelint \"./**/*.scss\" --allow-empty-input",
    "lint:fix": "eslint --fix \"./**/*.{ts,tsx}\" && stylelint --fix \"./**/*.scss\" --allow-empty-input",
    "lint:staged": "lint-staged --debug",
    "format": "prettier -c \"./**/*.{ts,tsx,json,scss,md}\"",
    "format:fix": "prettier -w \"./**/*.{ts,tsx,json,scss,md}\"",
    "prepare": "husky install .husky",
    "clean": "rm -rf .next && rm -rf node_modules && npm i",
    "prod:pm2": "cross-env NODE_ENV=production pm2 restart ecosystem.config.js",
    "prod:pm2-alone": "cross-env NODE_ENV=production pm2 restart ecosystem.standalone.config.js",
    "prod:stop": "pm2 stop ecosystem.config.js",
    "prod:reload": "pm2 reload ecosystem.config.js"
  },
  "dependencies": {
    "@emotion/cache": "^11.10.5",
    "@emotion/core": "^11.0.0",
    "@emotion/css": "^11.10.5",
    "@emotion/react": "^11.10.5",
    "@emotion/server": "^11.10.0",
    "@emotion/styled": "^11.10.5",
    "@popperjs/core": "^2.11.6",
    "@vercel/analytics": "^0.1.5",
    "@xsolare/ui": "^1.1.6",
    "axios": "^1.1.3",
    "browserslist": "^4.21.4",
    "classnames": "^2.3.2",
    "cookies-next": "^2.1.1",
    "dayjs": "^1.11.6",
    "dotenv-load": "^2.0.1",
    "html-react-parser": "^3.0.4",
    "mobx": "^6.7.0",
    "mobx-react-lite": "^3.4.0",
    "next": "13.0.3",
    "next-compose-plugins": "^2.2.1",
    "next-env": "^1.1.1",
    "next-images": "^1.8.4",
    "next-pwa": "^5.6.0",
    "next-seo": "^5.14.1",
    "next-sitemap": "^3.1.32",
    "nookies": "^2.5.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^4.6.0",
    "react-markdown": "^8.0.3",
    "react-popper": "^2.3.0",
    "rehype-raw": "^6.1.1",
    "remark-gfm": "^3.0.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.19.1",
    "@babel/preset-env": "^7.20.2",
    "@emotion/babel-plugin": "^11.10.5",
    "@emotion/babel-preset-css-prop": "^11.10.0",
    "@emotion/eslint-plugin": "^11.10.0",
    "@next/bundle-analyzer": "^13.0.3",
    "@types/node": "18.11.9",
    "@types/react": "18.0.25",
    "@types/react-dom": "18.0.9",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "autoprefixer": "^10.4.13",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "eslint": "8.27.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-next": "13.0.3",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^5.9.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.19",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-preset-env": "^7.8.3",
    "postcss-scss": "^4.0.5",
    "prettier": "^2.7.1",
    "sass": "^1.56.1",
    "stylelint": "^14.15.0",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-recommended": "^9.0.0",
    "typescript": "4.9.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.+(ts,tsx)": [
      "prettier --write",
      "eslint --fix",
      "tsc-files --pretty --noEmit"
    ],
    "src/**/*.+(scss)": [
      "stylelint --fix --allow-empty-input"
    ],
    "src/**/*.+(ts,tsx,json,scss,md)": [
      "prettier -c \"./**/*.{ts,tsx,json,scss,md}\""
    ]
  }
}
